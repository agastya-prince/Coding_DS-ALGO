#include <iostream>
using namespace std;
void insertionSort(int arr[], int n)
{
    //code here
    for (int i=0; i<n ; i++)
    {
        int ele = arr[i];
        for (int j = i; j > 0 ; j-- )
        {
            if (arr[j] < arr[j-1])
            {
                int t = arr[j];
                arr[j] = arr[j-1];
                arr[j-1] = t;
            }
        }
    }
}
int main()
{
    int arr[] = {4,3,1,9,7};
    int n = sizeof(arr)/sizeof(arr[0]);
    insertionSort(arr,n);
    for(int i=0; i<n; i++)
    {
        cout<<arr[i]<<"   ";
    }
}
